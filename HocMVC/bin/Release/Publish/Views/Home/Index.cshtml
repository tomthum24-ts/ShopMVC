    var listNewProduct = (List<Model.EF.Product>)ViewBag.Newproduct;
    var listhot = (List<Model.EF.Product>)ViewBag.ListHot;
}

@section Slide{
    @{Html.RenderAction("Slide", "Home"); }
}
