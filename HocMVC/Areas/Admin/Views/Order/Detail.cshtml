@model List<Model.ViewModel.OrderAdm>
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<button type="submit" class="btn btn-default" style="margin-bottom:10px;color:white; float:right;margin-right:50px;margin-top:20px">@Html.ActionLink("Trở lại", "Index")</button>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Tổng đơn</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Quantity</td>
                <td> @String.Format("{0:0,0}", @item.price)</td>
                <td>@String.Format("{0:0,0}", (item.price * item.Quantity))</td>
            </tr>
        }
    </tbody>
</table>




